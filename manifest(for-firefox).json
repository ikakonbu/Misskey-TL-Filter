{
    "name": "Misskey TL Filter",
    "version": "1.3",
    "manifest_version": 3,
    "description": "Misskey.ioの各TLに対して、RN非表示などのフィルターを設定できます",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./js/init.js"
            ]
        }
    ],
    "permissions": ["scripting","storage","tabs"],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "scripts": ["./js/serviceworker.js"]
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "misskeytlfilter@ikakonbu.io"
        }
    },
    "action": {
        "default_title": "Misskey TL Filter",
        "default_popup": "popup.html",
        "default_icon": {
	        "16": "./img/icon_16.png",
	        "48": "./img/icon_48.png",
            "128": "./img/icon_128.png"
        }
    }
}